<p id="notice"><%= notice %></p>

<div class="card mb-4">
  <div class="card-header">
      <i class="fas fa-table me-1"></i>
      <h1><center>Shelters</center></h1>
  </div>
  <div class="card-body">
    <table id="datatablesSimple" class= "dataTable-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @academies.each do |academy| %>
          <tr>
            <td><%= academy.name %></td>
            <td><%= academy.address %></td>
            <td><%= link_to 'Show', academy %></td>
            <td><%= link_to 'Edit', edit_academy_path(academy) %></td>
            <td><%= link_to 'Destroy', academy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Shelter', new_academy_path, class: "btn btn-outline-dark" %>
